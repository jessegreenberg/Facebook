<% provide(:pagename, @user.name) %>
<div class="row">

	<h1><%= @user.name %></h1>
	
	<% if signed_in? %>
		<div class="row">
			<aside class="span4">
			
				<section>
					<%= render 'shared/userpost_form' %>
				</section>
			</aside>
		</div>
		
		<h4> Hobbies </h4>
		<div class="row">
			<%= @hobbies %>
		</div>
		
	<% end %>

	<div class="span8">
		<%= render 'friendrequest_form' %>
		<% if @user.userposts.any? %>
			<h3> User Posts (<%= @user.userposts.count %>)</h3>
			<ol class="userposts">
				<%= render @userposts %>
			</ol>
			<%= will_paginate @userposts %>
		<% end %>
	</div>
</div>
